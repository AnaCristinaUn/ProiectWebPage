<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meal Planner App</title>

    <!-- Font import pentru FRESHDAYS -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- CSS-uri -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>

	<header class="header d-flex justify-content-between align-items-center px-4">
		<a href="/Home/Index" class="logo d-flex align-items-center text-decoration-none">
			<div class="logo-circle"></div>
			<div class="logo-text">FRESHDAYS</div>
		</a>



		<nav class="nav-links">
			<a href="/Home/Dashboard" class="nav-button">Home</a>
			<a href="/Meals" class="nav-button">Meals</a>
			<a href="/Home/Recipes" class="nav-button">Recipes</a>
		</nav>

		<div class="profile">
			<a asp-controller="Account" asp-action="Details" class="text-decoration-none" title="Profile Details">👤</a>
		</div>
	</header>


    

    <div class="container-fluid p-0 m-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

	<footer class="footer">
		<div class="footer-container">
			<div class="footer-logo">
				<div class="logo-circle"></div>
				<div class="logo-text">FRESHDAYS</div>
			</div>

			<div class="contact-card">
				<h3 class="contact-title">Contact Us:</h3>
				<p class="contact-info">
					<a href="mailto:email@gmail.com">Email: email@gmail.com</a>
				</p>
				<p class="contact-info">
					<a href="tel:0718229443">Phone: xxxxxxxxxx</a>
				</p>
			</div>

			<div class="social-icons">
				<a href="#" class="social-icon">
					<svg viewBox="0 0 24 24" width="24" height="24">
						<path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" fill="currentColor" />
					</svg>
				</a>
				<a href="#" class="social-icon">
					<svg viewBox="0 0 24 24" width="24" height="24">
						<path d="M22.212 5.656a8.384 8.384 0 01-2.401.658A4.195 4.195 0 0021.6 4c-.82.488-1.719.83-2.656 1.015a4.182 4.182 0 00-7.126 3.814 11.874 11.874 0 01-8.62-4.37 4.168 4.168 0 00-.566 2.103c0 1.45.738 2.731 1.86 3.481a4.168 4.168 0 01-1.894-.523v.052a4.185 4.185 0 003.355 4.101 4.21 4.21 0 01-1.89.072A4.185 4.185 0 007.97 16.65a8.394 8.394 0 01-6.191 1.732 11.83 11.83 0 006.41 1.88c7.693 0 11.9-6.373 11.9-11.9 0-.18-.005-.362-.013-.54a8.496 8.496 0 002.087-2.165z" fill="currentColor" />
					</svg>
				</a>
				<a href="#" class="social-icon">
					<svg viewBox="0 0 24 24" width="24" height="24">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 15.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 13v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" fill="currentColor" />
					</svg>
				</a>
			</div>

			<a href="#" class="scroll-top">
				<svg viewBox="0 0 24 24" width="24" height="24">
					<path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z" fill="currentColor" />
				</svg>
			</a>
		</div>
	</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
