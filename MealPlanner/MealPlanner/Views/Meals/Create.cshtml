@model MealPlanner.Models.Meal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/create_styles.css" />

<div class="container">
    <div class="content">
        <h1 class="main-title">Create Meal</h1>
        <p class="tagline">Add a delicious meal</p>
        <div class="description">
            Fill in the form below to add a new meal to your planner.
        </div>

        <form asp-action="Create" class="styled-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="form-label">Meal Name</label>
                <input asp-for="Name" class="form-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AddedDate" class="form-label">Date Added</label>
                <input asp-for="AddedDate" class="form-input" />
                <span asp-validation-for="AddedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ingredients" class="form-label">Ingredients</label>
                <input asp-for="Ingredients" class="form-input" />
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CookingTime" class="form-label">Cooking Time (mins)</label>
                <input asp-for="CookingTime" class="form-input" />
                <span asp-validation-for="CookingTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="form-label">Rating</label>
                <input asp-for="Rating" class="form-input" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="button-container">
                <button type="submit" class="cta-button">Create</button>
            </div>
        </form>

        <div class="button-container" style="margin-top: 1rem;">
            <a asp-action="Index" class="cta-button" style="background-color: transparent; border-style: solid;">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
