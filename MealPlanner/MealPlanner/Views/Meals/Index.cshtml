@model MealPlanner.Models.MealIngredientsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/meals_styles.css" />
<script src="~/js/script.js" defer></script>
<link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css' rel='stylesheet' />
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js'></script>




<form asp-controller="Meals" asp-action="Index" method="get">
    <p>
        <select asp-for="MealIngredients" asp-items="Model.Ingredients">
            <option value="">All</option>
        </select>

        <label>Name: <input type="text" asp-for="SearchString" class="form-control" /></label>
        <input type="submit" value="Filter" />

        <a asp-action="Create">Create New</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].AddedDate)
            </th>
            <th>Meal Type</th>
            
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].CookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meals!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @item.MealType
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table> 




