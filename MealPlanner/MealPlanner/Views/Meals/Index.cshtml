@model MealPlanner.Models.MealIngredientsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Meals" asp-action="Index" method="get">
    <p>
        <select asp-for="MealIngredients" asp-items="Model.Ingredients">
            <option value="">All</option>
        </select>

        <label>Name: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].AddedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].CookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meals!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
