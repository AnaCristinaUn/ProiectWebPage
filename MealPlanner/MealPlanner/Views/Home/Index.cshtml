@{
    ViewData["Title"] = "Home Page";
}


    <link rel="stylesheet" href="~/css/main_styles.css" asp-append-version="true" />

	

	<main class="container">
		<section class="content">
			<div class="title-container">
				<h1 class="main-title">FreshDays</h1>
			</div>
			<h2 class="tagline">Eat Fresh, Plan Smart</h2>
			<p class="description">
				FreshDays is a meal planning tool that helps you organize meals and track nutrition. Add meals to a calendar, search recipes based on your dietary needs, and monitor calories and nutrients. Manage ingredients, create shopping lists, and check expiration dates. FreshDays makes meal planning simple and healthier.
			</p>
			<div class="button-container">
			<a class="cta-button" href="/Account/Login">Get Started</a>

			</div>
		</section>

		<section class="illustration">
			<div class="calendar">
				<div class="calendar-header">
					<span class="month-name">April 2025</span>
				</div>
				<div class="calendar-days">
					<span>Sun</span> <span>Mon</span> <span>Tue</span> <span>Wed</span> <span>Thu</span> <span>Fri</span> <span>Sat</span>
				</div>
				<div class="calendar-content">
					<!-- Dates will be dynamically generated or hardcoded -->
					<span class="date">1</span> <span class="date">2</span> <span class="date">3</span> <span class="date">4</span> <span class="date">5</span> <span class="date">6</span>
					<span class="date">7</span> <span class="date">8</span> <span class="date">9</span> <span class="date">10</span> <span class="date">11</span> <span class="date">12</span> <span class="date">13</span>
					<span class="date">14</span> <span class="date">15</span> <span class="date">16</span> <span class="date">17</span> <span class="date">18</span> <span class="date">19</span> <span class="date">20</span>
					<span class="date">21</span> <span class="date">22</span> <span class="date">23</span> <span class="date">24</span> <span class="date">25</span> <span class="date">26</span> <span class="date">27</span>
					<span class="date">28</span> <span class="date">29</span> <span class="date">30</span>
				</div>
			</div>
		</section>
		
	</main>
	
	<section class="features">
		<div class="feature-card orange">
			<h3 class="feature-title">Meal Planning Calendar</h3>
			<p class="feature-desc">Easily add and track your meals for the week with our beautifully designed calendar.</p>
			<div class="feature-icon">
				<svg viewBox="0 0 50 50" width="50" height="50">
					<path d="M10,10 L30,10 C32,10 35,15 35,15 L35,40 L10,40 Z" stroke="#00AB44" fill="none" stroke-width="2"/>
					<line x1="15" y1="20" x2="25" y2="20" stroke="#00AB44" stroke-width="2"/>
					<line x1="15" y1="25" x2="30" y2="25" stroke="#00AB44" stroke-width="2"/>
					<line x1="15" y1="30" x2="20" y2="30" stroke="#00AB44" stroke-width="2"/>
				</svg>
			</div>
		</div>
		
		<div class="feature-card green">
			<h3 class="feature-title">Find Delicious Recipes</h3>
			<p class="feature-desc">Find recipes based on dietary preferences and nutritional goals with our smart search filters.</p>
			<div class="feature-icon">
				<svg viewBox="0 0 50 50" width="50" height="50">
					<rect x="10" y="15" width="25" height="20" fill="none" stroke="#000" stroke-width="2"/>
					<path d="M15,15 L15,10 L30,10 L30,15" fill="none" stroke="#000" stroke-width="2"/>
					<line x1="10" y1="20" x2="35" y2="20" stroke="#000" stroke-width="2"/>
				</svg>
			</div>
		</div>
		
		<div class="feature-card orange">
			<h3 class="feature-title">Track Your Nutrition</h3>
			<p class="feature-desc">Easily add and track your meals for the week with our beautifully designed calendar.</p>
			<div class="feature-icon">
				<svg viewBox="0 0 50 50" width="50" height="50">
					<circle cx="25" cy="25" r="15" fill="none" stroke="#00AB44" stroke-width="2"/>
					<line x1="35" y1="35" x2="40" y2="40" stroke="#00AB44" stroke-width="3" stroke-linecap="round"/>
					<circle cx="25" cy="25" r="8" fill="none" stroke="#00AB44" stroke-width="1"/>
				</svg>
			</div>
		</div>
		
		<div class="feature-card green">
			<h3 class="feature-title">Shopping List</h3>
			<p class="feature-desc">Check pantry items, generate shopping lists, and track expiration dates to reduce waste.</p>
			<div class="feature-icon">
				<svg viewBox="0 0 50 50" width="50" height="50">
					<rect x="15" y="20" width="20" height="20" fill="none" stroke="#000" stroke-width="2"/>
					<path d="M15,20 L10,15 L10,10 L15,10 L20,15 L30,15 L35,10 L40,10 L40,15 L35,20" fill="none" stroke="#000" stroke-width="2"/>
					<rect x="22" y="30" width="6" height="5" fill="#000"/>
				</svg>
			</div>
		</div>
	</section>

	



